<%= link_to 'New Product', new_product_path %>
<hr>

<% @products.each do |product| %>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="..." class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          Name:<h5 class="card-title"><%= product.name %></h5>
          Currency:<p class="card-text"><%= product.currency %></p>
          Price:<p class="card-text"><%= product.price %></p>
          Sales:<p class="card-text"><%= product.price_cents%></p>
          Desription:<p class="card-text"><%= product.description %></p>
          Strip<p class="card-text"><%#= Stripe::Price.retrieve(product.stripe_price_id)&.currency %></p>
          <p class="card-text"><%#= Stripe::Price.retrieve(product.stripe_price_id)&.unit_amount/100%></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
