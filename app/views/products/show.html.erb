<center>
 <div class="login-box">
    <p>
      <strong>Name:</strong>
      <%= @product&.name %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product&.price %>
    </p>

    <p>
    <% if @product&.product_image&.attached? %>
    <%= image_tag @product.product_image, height:150, width:150 %>
    <% end %>
    </p>

    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Destroy', product_path(@product), method: :delete, data: { confirm: 'Are you sure?' } %>
    <br>
    <%= link_to "Back", products_path, class: 'btn btn-dark' %>
  </div>
</center>
